                            <local:BindingProxy x:Key="proxy" Data="{Binding}" />


                            <ContextMenu x:Key="MyElementMenu">
                                <MenuItem Header="Delete"  Command="{Binding Path=DataContext.RemoveFromFriendsCommand}" CommandParameter="{Binding Path=SelectedItem}"/>
